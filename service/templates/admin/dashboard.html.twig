{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard - Shetcode{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h3>Admin Dashboard</h3>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5>Welcome, Admin {{ user.username }}</h5>
                        <p>From here you can manage various aspects of the Shetcode platform.</p>
                    </div>

                    {% if currentMessage %}
                        <div class="alert alert-info mb-4">
                            <h5>🕰️ Active Time Traveller Message</h5>
                            <strong>From {{ currentMessage.year }}:</strong> {{ currentMessage.message }}
                            <br><small class="text-muted">Broadcasting since {{ currentMessage.createdAt|date('Y-m-d H:i') }}</small>
                        </div>
                    {% endif %}

                    <div class="list-group mb-4">
                        <a href="{{ path('admin_message_form') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">🕰️ Time Traveller Message</h5>
                                <p class="mb-1">Send messages through time to all participants on the problems page</p>
                            </div>
                            <span class="badge bg-primary rounded-pill">→</span>
                        </a>
                        
                        <a href="{{ path('admin_feedback') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">View All User Feedback</h5>
                                <p class="mb-1">Review feedback submitted by users, including their uploaded images</p>
                            </div>
                            <span class="badge bg-primary rounded-pill">→</span>
                        </a>
                    </div>

                    <div class="mt-4">
                        <a href="{{ path('problems_list') }}" class="btn btn-secondary">Back to Main Site</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 